<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>com_mobilemenuck</name>
	<ckpro>0</ckpro>
	<variant>free</variant>
	<creationDate>September 2018</creationDate>
	<copyright>Copyright (C) 2018. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<author>Cedric Keiflin</author>
	<authorEmail>ced1870@gmail.com</authorEmail>
	<authorUrl>https://www.joomlack.fr</authorUrl>
	<version>1.6.2</version>
	<description>Mobile Menu CK allows you to add a mobile version of your menus with ease.</description>
	<scriptfile>install.php</scriptfile>
	<files folder="site">
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_mobilemenuck.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_mobilemenuck.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.com_mobilemenuck.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.com_mobilemenuck.sys.ini</language>
	</languages>
	<media folder="media" destination="com_mobilemenuck">
		<folder>assets</folder>
		<folder>images</folder>
	</media>
	<administration>
		<menu>COM_MOBILEMENUCK</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_mobilemenuck&amp;view=items" img="class:mobilemenuck-items"
				alt="Mobilemenuck/Items">COM_MOBILEMENUCK_ITEMS</menu>
			<menu link="option=com_mobilemenuck&amp;view=about"
				view="about" img="class:mobilemenuck-about" alt="Mobilemenuck/About">CK_ABOUT</menu>
		</submenu>
		<files folder="administrator">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>mobilemenuck.php</filename>
			<folder>controllers</folder>
			<folder>extensions</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="administrator">
			<language tag="en-GB">language/en-GB/en-GB.com_mobilemenuck.sys.ini</language>
			<language tag="fr-FR">language/fr-FR/fr-FR.com_mobilemenuck.sys.ini</language>
		</languages>
	</administration>
	<updateservers>
		<server type="extension" priority="1" name="Mobile Menu CK Light">https://update.joomlack.fr/mobilemenuck_light_update.xml</server>
	</updateservers>
</extension>